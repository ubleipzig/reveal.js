{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"args": ["--no-color"],
	"showOutput": "always",
	"isShellCommand": true,
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "build slides",
			"args": [
				"run",
				"grunt"
			],
			"isBuildCommand": true
		},
		{
			"taskName": "serve slides",
			"args": [
				"start"
			],
			"isBackground": true
		}
	]
}